<h3>{{viewTitle}}</h3>

<form action="/driver" method="POST" autocomplete="off">
    <div class-"form-group">
        <label>First Name</label>
        <input type="text" class="form-control" name="firstName" placeholder="First Name" value="{{driver.firstName}}">
        <div class="text-danger">
            {{driver.firstNameError}}
        </div>
    </div>
    <div class-"form-group">
        <label>Last Name</label>
        <input type="text" class="form-control" name="lastName" placeholder="Last Name" value="{{driver.LastName}}">
    </div>
    <div class-"form-group">
        <label>Middle Name</label>
        <input type="text" class="form-control" name="middleName" placeholder="Middle Name" value="{{driver.middleName}}">
    </div>
    <div class-"form-group">
        <label>TWIC Expiration</label>
        <input type="text" class="form-control" name="twicExpiration" placeholder="TWIC Expiration" value="{{driver.twicExpiration}}">
    </div>
    <div class="form-group">
        <label>Phone Number</label>
        <input type="text" class="form-control" name="phoneNumber" placeholder="Phone Number" value="{{driver.phoneNumber}}">
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="text" class="form-control" name="email" placeholder="Email" value="{{driver.email}}">
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Carrier</label>
            <input type="text" class="form-control" name="carrier" placeholder="Carrier" value="{{driver.carrier}}">
        </div>
        <div class="form-group col-md-6">
            <label>Product</label>
            <input type="text" class="form-control" name="product" placeholder="Product" value="{{driver.product}}">
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
    </div>
</form>